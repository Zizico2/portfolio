---
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";
import BrowserSvg from "../assets/browser.svg";
import DatabaseSvg from "../assets/database.svg";

const email = "berna.agua@protonmail.com";

const longIntro =
  "Experienced backend developer and cloud architect. A proactive team member dedicated to continuous learning, problem-solving, and aiding teammates in achieving quicker outcomes.";
const shortIntroLines = ["Hi, I'm Bernardo."];
const professionalExperienceTech = [
  "Rust",
  "Go",
  "Python",
  "TypeScript",
  "Java",
  "C#",
  "Node.js",
  "React",
  "Next.js",
  "Vue.js",
  "Nuxt",
  "MongoDB",
  "Postgres",
  "MySQL",
  "Docker",
  "Azure",
  "GCP",
];

const personalProjectsTech = [
  "Rust",
  "React",
  "Next.js",
  "Postgres",
  "Docker",
  "Github Actions",
  "Cloudflare Workers",
  "RabbitMQ",
  "AWS",
  "Clerk",
];
---

<!doctype html>
<html>
  <Header title="Bernardo Borda d'Ãgua" />
  <body>
    <div class="content">
      <Sidebar selectedItem="home" />
      <nav class="main">
        <div class="container">
          <main class="fold-content-container">
            <div class="fold-content">
              <h1>
                {shortIntroLines[0]}
                <br />
                {shortIntroLines[1]}
              </h1>
              <p class="lead">
                {longIntro}
              </p>
            </div>
            <a href={`mailto:${email}`} class="button w-button">Contact</a>
            <a
              target="_blank"
              href={"https://www.linkedin.com/in/bernardo-agua/"}
              class="button w-button">LinkedIn</a
            >
            <a
              target="_blank"
              href={"https://github.com/Zizico2"}
              class="button w-button">GitHub</a
            >
          </main>
          <div class="projects-section">
            <!-- Personal Projects -->
            <a href="/personal-projects" class="projects-container">
              <div class="single-projects-category">
                <div class="projects-category-image-container projects-img">
                  <DatabaseSvg width={64} height={64} />
                </div>
              </div>
              <div class="single-projects-content">
                <h4>Personal Projects</h4>
                <div class="tech-tools-container">
                  <div class="mini-label-white gray-color">
                    Technologies &amp; tools
                  </div>
                  <div class="chips-container chips-container-small-width">
                    {
                      personalProjectsTech.map((techItem) => (
                        <div class="single-chip small-chip">{techItem}</div>
                      ))
                    }
                  </div>
                </div>
              </div>
            </a>
            <!-- Professional Experience -->
            <a href="/professional-experience" class="projects-container">
              <div class="single-projects-category">
                <div class="projects-category-image-container">
                  <BrowserSvg width={64} height={64} />
                </div>
              </div>
              <div class="single-projects-content">
                <h4>Professional Experience</h4>
                <div class="tech-tools-container">
                  <div class="mini-label-white gray-color">
                    Technologies &amp; tools
                  </div>
                  <div class="chips-container chips-container-small-width">
                    {
                      professionalExperienceTech.map((techItem) => (
                        <div class="single-chip small-chip">{techItem}</div>
                      ))
                    }
                  </div>
                </div>
              </div>
            </a>
          </div>
        </div>
      </nav>
    </div>

    <!--[if lte IE 9]><script src="//cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif]-->
  </body>
</html>
